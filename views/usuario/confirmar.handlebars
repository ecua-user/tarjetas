  <link rel="stylesheet" href="../modular/estilos/home.css">
  <video id="video" autobuffer loop autoplay preload muted>
    <source src="../general/fondo.mp4" type='video/mp4; codecs="avc1,mp4a"' />
    <source src="../general/fondo.mp4" type='video/ogg; codecs="theora,vorbis"' />
    <source src="../general/fondo.mp4" type='video/webm; codecs="vp8,vorbis"' />
  </video>
<link rel="stylesheet" href="../modular/estilos/login.css">
<div class="row">
    <div class="col-lg-4 col-md-3 col-sm-2 col-xs-1"></div>
    <div class="col-lg-4 col-md-6 col-sm-8 col-xs-10 margen ">
        <div class="fondo-blanco borde-redondo">
            <h2 class="centrado "><b>Confirmar cuenta</b></h2>
            <div id="centralMensajes">
                {{#if success_msg}}<div class="alert alert-success">{{success_msg}}</div>{{/if}} 
                {{#if error_msg}}<div class="alert alert-danger">{{error_msg}}</div>{{/if}} 
                {{#if error}}<div class="alert alert-danger">{{error}}</div>{{/if}}
            </div>
            <img class="profile-img" src="../modular/imagenes/login.png"  alt="">
            <form class="form-signin" action="/users/confirmar" method="post">
                <input type="email" id="usuario-mail" name="username" class="form-control" placeholder="Email" required autofocus><br>
                <input type="text" id="token-mail" name="token" minlength="16" maxlength="16" class="form-control" placeholder="Token" required><br>
                <button type="submit" class="btn btn-primary btn-block">Confirmar</button>
            </form>
        </div>
    </div>
    <div class="col-lg-4 col-md-3 col-sm-2 col-xs-1"></div>
</div>
<script>
    document.getElementById('usuario-mail').value=localStorage.getItem('user')
    if(localStorage.getItem('user')!=null ){
        document.getElementById('usuario-mail').setAttribute('readonly','')
        document.getElementById('token-mail').focus()
    }
</script>