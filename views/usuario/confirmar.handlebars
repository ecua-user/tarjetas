<link rel="stylesheet" href="../modular/estilos/home.css">
<div class="row">
    <div class="col-lg-2 col-md-2"></div>
    <div class="col-lg-8 col-md-8">
        <div class="contenedor-bordes blanco">
            {{#if imagenes}}
            <div id="corousel-ben" class="carousel slide " data-ride="carousel">
                <div class="carousel-inner">
                    {{#each imagenes}}
                    <div class="carousel-item carro_img" style="padding-left:2%; padding-right:2%">
                        <img class="img-slider d-block w-100" src="{{this.imagen}}" alt="{{this.codigo}}">
                    </div>
                    {{/each}}
                </div>
                <a class="carousel-control-prev" style="background-color:rgba(000, 000, 000, 0.01)" href="#corousel-ben" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" style="background-color:rgba(000, 000, 000, 0.01)" href="#corousel-ben" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
            {{/if}}

        </div>

    </div>
</div>

<div class="row blanco">
    <div class="col-lg-4 col-md-4 "></div>
    <div class="col-lg-4 col-md-4 ">
        <div class="centrado">
            <h2 class="centrado ">
                <b>Confirma tu cuenta</b>
            </h2>
            <div id="centralMensajes">
                {{#if success_msg}}
                <div class="alert alert-success">{{success_msg}}</div>{{/if}} {{#if error_msg}}
                <div class="alert alert-danger">{{error_msg}}</div>{{/if}} {{#if error}}
                <div class="alert alert-danger">{{error}}</div>{{/if}}
            </div>

            <form class="form-signin" action="/users/confirmar" method="post">
                <input type="email" id="usuario-mail" name="username" class="form-control" placeholder="Email" required autofocus>
                <br>
                <input type="text" id="token-mail" name="token" minlength="16" maxlength="16" class="form-control" placeholder="Token" required>
                <br>
                <button type="submit" class="btn btn-warning ">Validar cuenta</button>
            </form>
        </div>
    </div>
    <div class="col-lg-4 col-md-3 col-sm-2 col-xs-1"></div>
</div>
<script>
    //fondo-registro
    document.getElementById('usuario-mail').value = localStorage.getItem('user')
    if (localStorage.getItem('user') != null) {
        document.getElementById('usuario-mail').setAttribute('readonly', '')
        document.getElementById('token-mail').focus()
    }
</script>

<script src="../modular/codigo/home.js"></script>
<script>
    window.addEventListener('load', () => {
        control_slider_beneficios()
    })
</script>