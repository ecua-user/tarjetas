<br>
<div>
    <div class="blanco calibri">

        <div>
            <div class="alert alert-danger" id="control_error" style="display:none"></div>
        </div>
        <div>
            <link rel="stylesheet" href="../modular/estilos/login.css">
            <div class="row">
                <div class="col-lg-4 col-md-4"></div>
                <div class="col-lg-4 col-md-4">
                    <div>
                        <h2 class="centrado ">
                            <b>Cambiar contraseña</b>
                        </h2>
                        <img class="profile-img" src="../modular/imagenes/login.png" alt="">
                        <div id="centralMensajes">
                            {{#if success_msg}}
                            <div class="alert alert-success">{{success_msg}}</div>{{/if}} {{#if error_msg}}
                            <div class="alert alert-danger">{{error_msg}}</div>{{/if}} {{#if error}}
                            <div class="alert alert-danger">{{error}}</div>{{/if}}
                        </div>
                        <form action="/users/cambiar" method="post">
                            <div class="form-group">
                                <label for="">Usuario</label>
                                <input type="email" class="form-control" readonly value="{{user.username}}">
                            </div>
                            <div class="form-group">
                                <label for="">Contraseña actual</label>
                                <input type="password" minlength="8" name="password" placeholder="Contraseña actual" class="form-control" required>
                            </div>
                            <div class="form-group">
                                <label for="">Nueva contraseña</label>
                                <input type="password" minlength="8" name="Npassword" placeholder="Nueva contraseña" class="form-control" required>
                            </div>
                            <div class="form-group">
                                <label for="">Repetir nueva contraseña</label>
                                <input type="password" minlength="8" name="RNpassword" placeholder="Repita nueva contraseña" class="form-control" required>
                            </div>
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-primary">Actualizar contraseña</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>