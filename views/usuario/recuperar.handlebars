<div class="row">
    <div class="col-lg-4 col-md-3 col-sm-2 col-xs-1"></div>
    <div class="col-lg-4 col-md-6 col-sm-8 col-xs-10 margen">
        <div class="centrado contenedor-bordes blanco">
             <div id="central-mensajes" >
                {{#if success_msg}}
                <div class="centrado blanco mensaje-bien-sistema animated flash">
                    <h3>{{success_msg}}</h3>
                </div>
                {{/if}} {{#if error}}
                <div class="centrado blanco mensaje-error-sistema animated flash">
                    <h3>{{error}}</h3>
                </div>
                {{/if}}
                <div class="centrado blanco mensaje-bien-sistema" id="div-correcto" style="display:none; font-size:140%">

                </div>
                <div class="centrado blanco mensaje-error-sistema" id="div-error" style="display:none;font-size:140%"></div>
            </div>
            <h2 class="centrado "><b>Recuperación de la cuenta</b></h2>
           
            <img class="profile-img" src="../modular/imagenes/login.png"  alt="">
            <form class="form-signin" action="/users/recuperar" method="post">
                <div class="form-group">
                    <input type="email" name="username" class="form-control" placeholder="Email" required autofocus>
                </div>
                <div class="form-group">
                    <input type="text" maxlength="16" minlength="16" name="token" class="form-control" placeholder="Token" required>
                </div>
                <div class="form-group">
                    <input  type="password"  minlength="8"  name="password" placeholder="Nueva contraseña" class="form-control" required>
                </div>
                <div class="form-group">
                    <input type="password" minlength="8"  name="rpassword" placeholder="Repetir nueva contraseña" class="form-control" required>
                </div>
                <button type="submit" class="btn btn-primary btn-block">Continuar</button>
            </form>
        </div>
    </div>
    <div class="col-lg-4 col-md-3 col-sm-2 col-xs-1"></div>
</div>
<script src="../modular/codigo/users.js"></script>