<div class="alert alert-primary margen-row" role="alert">
    <h3 class="centrado ">Modificar local</h3>
</div>
<div class="alert margen-row">
    <div class="alert alert-light" role="alert">
        <div class="form-group">
            <div class="input-group">
                <input id="filtro-buscar" type="text" onkeyup="filtro_locales()" class="form-control" placeholder="Buscar...">
                <button type="button" class="btn btn-default" aria-label="Left Align">
                    <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                </button>
            </div>
        </div>
    </div>
    
        {{#if local}}
            {{#each local}}
                <div class="alert alert-secondary row locales-buscar" role="alert">
                    <div class="col-lg-1 col-md-1 col-sm-3 col-xs-4">
                        <img src="{{this.imagen}}" height="40px"  alt="">   
                    </div>
                    <div class="col-lg-9 col-md-9 col-sm-6 col-xs-4">
                        <h4 class="busqueda">{{this.nombre}}</h4>
                    </div>
                    <div class="col-lg-2 col-md-2 col-sm-3 col-xs-4" style="text-align:right">
                        <button id="{{this.codigo}}" onclick="modificar_local(this.id)" type="button" class="btn btn-primary" aria-label="Left Align">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        </button>
                        <button id="{{this.codigo}}" onclick="eliminar_local(this.id)" type="button" class="btn btn-danger" aria-label="Left Align">
                            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                        </button>
                    </div>
                </div>
            {{/each}}
        {{/if}}
    </div>
</div>
<div class="modal fade bd-example-modal-sm" id="modal-modificar-local" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <form class="form-signin" action="/admin/modificar-local" onsubmit="cargando()" method="post" enctype="multipart/form-data">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Modificar Local</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div id="centralMensajes">
                        {{#if success_msg}}
                        <div class="alert alert-success">{{success_msg}}</div>{{/if}} {{#if error_msg}}
                        <div class="alert alert-danger">{{error_msg}}</div>{{/if}} {{#if error}}
                        <div class="alert alert-danger">{{error}}</div>{{/if}}
                    </div>
                        <div class="form-group">
                            <input type="text" style="display:none" id="modificar-cod" name="codigo">
                            <label for="">Razón social</label>
                            <input id="modificar-nombre" required type="text" name="nombre" class="form-control">
                        </div>
                        <div id="poder form-signin">
                            <img src="../especifico/imagenes/local.png" class="img-responsive"  id="img_destino">
                        </div>
                        <div class="form-group">
                            <div class="div_file btn btn-info " >
                                <span class="glyphicon glyphicon-picture" aria-hidden="true"></span>
                                320 X 320
                                <input type="file" class="btn_enviar" id="file_url"  accept=".jpg,.png," name="image_producto" onchange="alertaOferta(this,this.files[0].size)"/>            
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="">Email</label>
                            <input type="email" required name="username" class="form-control" id="modificar-email">
                        </div>
                </div>
                <div class="modal-footer">
                    <button type="submit"  class="btn btn-primary">Guardar cambios</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                </div>
            </form>
        </div>
    </div>
</div>
