<div class="alert alert-primary margen-row" role="alert">
    <h3 class="centrado ">Modificar local</h3>
</div>
<div class="alert margen-row">
    <div class="alert alert-light" role="alert">
        <div class="form-group">
            <div class="input-group">
                <input id="filtro-buscar" type="text" onkeyup="filtro_locales()" class="form-control" placeholder="Buscar...">
                <button type="button" class="btn btn-default" aria-label="Left Align">
                    <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                </button>
            </div>
        </div>
    </div>
        {{#if local}}
            {{#each local}}
                <div class="alert alert-secondary row locales-buscar" role="alert">
                    <div class="col-lg-1 col-md-1 col-sm-3 col-xs-4">
                        <img src="{{this.logotipo}}" height="40px"  alt="">   
                    </div>
                    <div class="col-lg-9 col-md-9 col-sm-6 col-xs-4">
                        <h4 class="busqueda">{{this.nombre}}</h4>
                    </div>
                    <div class="col-lg-2 col-md-2 col-sm-3 col-xs-4" style="text-align:right">
                        <button id="{{this.codigo}}" onclick="modificar_local(this.id)" type="button" class="btn btn-primary" aria-label="Left Align">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        </button>
                        <button id="{{this.codigo}}" onclick="eliminar_local(this.id)" type="button" class="btn btn-danger" aria-label="Left Align">
                            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                        </button>
                    </div>
                </div>
            {{/each}}
        {{/if}}
    </div>
</div>
<div class="modal fade bd-example-modal-lg" id="modal-modificar-local" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            
            <form action="/admin/modificar-local" onsubmit="cargando()" method="post" enctype="multipart/form-data">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Modificar Local</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div id="centralMensajes">
                    {{#if success_msg}}
                    <div class="alert alert-success">{{success_msg}}</div>{{/if}} {{#if error_msg}}
                    <div class="alert alert-danger">{{error_msg}}</div>{{/if}} {{#if error}}
                    <div class="alert alert-danger">{{error}}</div>{{/if}}
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-lg-4 col-md-3">
                            <h4 class="centrado">Logotipo</h4>
                            <div id="poder form-signin">
                                <img src="../especifico/imagenes/local.png" class="img-responsive" id="img_destino">
                            </div>
                            <div class="form-group">
                                <div class="div_file btn btn-info ">
                                    <span class="glyphicon glyphicon-picture" aria-hidden="true"></span>
                                    320 X 320
                                    <input type="file" class="btn_enviar" id="file_url" accept=".jpg,.png," name="image_logotipo" onchange="alertaOferta(this,this.files[0].size)"
                                        />
                                </div>
                            </div>
                            <h4 class="centrado">Beneficio</h4>
                            <div id="poder1 form-signin">
                                <img src="../especifico/imagenes/local.png" class="img-responsive" id="img_destino1">
                            </div>
                            <div class="form-group">
                                <div class="div_file btn btn-info ">
                                    <span class="glyphicon glyphicon-picture" aria-hidden="true"></span>
                                    320 X 320
                                    <input type="file" class="btn_enviar" id="file_url1" accept=".jpg,.png," name="image_beneficio" onchange="alertaOferta1(this,this.files[0].size)"
                                        />
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-8 col-md-9">
                            <div class="form-group">
                                <input type="text" style="display:none" id="modificar-cod" name="codigo">
                                <label for=""><b>Razón social</b></label>
                                <input type="text" id="modificar-nombre" name="nombre" class="form-control" placeholder="Nombre" required id="">
                            </div>
                            <div class="form-group">
                                <label for=""><b>Beneficio</b></label>
                                <input type="number" id="modificar-beneficio" name="beneficio" value="0" required class="form-control">
                            </div>
                            <div class="form-group">
                                <label for=""><b>Dirección</b></label>
                                <input type="text" id="modificar-direccion" name="direccion" class="form-control" placeholder="Direccion" required id="">
                            </div>
                             <div class="form-group">
                                <label for=""><b>Teléfono</b></label>
                                <input type="tel" id="modificar-telefono" name="telefono" class="form-control" placeholder="Teléfono"  required>
                            </div>

                            <div class="form-group">
                                <label for=""><b>Email</b></label>
                                <input type="email" id="modificar-email" name="username" class="form-control" placeholder="Email" required>
                            </div>
                            <div class="modal-footer">
                                <button type="submit"  class="btn btn-primary">Guardar cambios</button>
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                            </div> 
                        </div>
                    </div>
                </div>
                
            </form>
        </div>
    </div>
