        <form action="/admin/home-video" method="post" onsubmit="validarURL(event)">
            <div class="input-group">
                <span class="input-group-addon">Título</span>
                <input type="text" class="form-control" placeholder="Titulo" name="titulo" required>
            </div><br>
            <div class="input-group">
                <span class="input-group-addon">Link</span>              
                <input type="url" title="Ingreser una url empezando por http y de tipo embed" required placeholder="https://...." name="link" id="input_video" class="form-control">
                <span class="input-group-addon ">
                    <button onmouseover="quitarValidacion()" type="submit" class="btn btn-primary" aria-label="Left Align">
                        <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
                    </button>
                </span>
            </div>
        </form>
        <br>
        <button data-toggle="collapse" href="#todos-videos" aria-expanded="false" aria-controls="todos-videos" type="button" class="btn btn-primary"
            aria-label="Left Align">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>Todos
        </button>
        <div class="collapse multi-collapse" id="todos-videos">
            <br>
            <div class="alert">
                {{#if videos}}
                    {{#each videos}}
                        <div class="row" style="margin-bottom:12px">
                            <div class="col-lg-11 col-md-11 col-sm-11 col-xs-7">
                                <iframe width="100%" height="100%" src="{{this.url}}" frameborder="0" allowfullscreen></iframe>
                            </div>
                            <div class="col-lg-1 col-md-1 col-sm-1 col-xs-5">
                                <button id="{{this.codigo}}" onclick="eliminarVideo('{{this.codigo}}')" type="button" style="margin-top:6px" class="btn btn-danger" aria-label="Left Align">
                                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                                </button>
                            </div>
                        </div>
                    {{/each}}
