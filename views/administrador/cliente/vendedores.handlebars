<div class="row">
    <div class="col-lg-12">
        <div class=" contenedor-bordes ">
            <div id="central-mensajes">
                {{#if success_msg}}
                <div class="centrado blanco mensaje-bien-sistema animated flash">
                    <h3>{{success_msg}}</h3>
                </div>
                {{/if}} {{#if error}}
                <div class="centrado blanco mensaje-error-sistema animated flash">
                    <h3>{{error}}</h3>
                </div>
                {{/if}}
                <div class="centrado blanco mensaje-bien-sistema" id="div-correcto" style="display:none; font-size:140%">

                </div>
                <div class="centrado blanco mensaje-error-sistema" id="div-error" style="display:none;font-size:140%"></div>
            </div>
            <h3 class="blanco centrado">Vendedores</h3>
            <span class="input-group-addon btn btn-success" id="basic-addon1" onclick="exportar('datos_reporte')">Exportar a excel</span>
            <div class="table table-responsive">
                <table class="table table-bordered" id="datos_reporte" >
                    <tr class="alert-primary">
                        <th>Cédula</th>
                        <th>Nombre</th>
                        <th>Teléfono</th>
                        <th>Dirección</th>
                        <th>Sector</th>
                        <th>Edad</th>
                        <th>Género</th>
                        <th>Email</th>
                        <th>Superior</th>
                    </tr>
                    {{#if vendedores}}
                        {{#each vendedores}}
                            <tr>
                                <td>{{this.cedula}}</td>
                                <td>{{this.nombre}}</td>
                                <td>{{this.telefono}}</td>
                                <td>{{this.direccion}}</td>
                                <td>{{this.sector}}</td>
                                <td>{{this.edad}}</td>
                                <td>{{this.genero}}</td>
                                <td>{{this.username}}</td>
                                <td>{{this.referido}}</td>
                            </tr>
                        {{/each}}
                    {{/if}}
                </table>
            </div>
        </div>
    </div>
</div>

