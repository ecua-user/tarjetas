<div class="alert alert-primary  margen-row" role="alert">
    <h3 class="centrado ">Modificar o eliminar tarjetas</h3>
</div>
<div class="margen-row">

    <div id="div-peligro" style="display:none" class="alert alert-danger"></div>
    <div id="centralMensajes">
        {{#if success_msg}}
        <div class="alert alert-success">{{success_msg}}</div>{{/if}} {{#if error_msg}}
        <div class="alert alert-danger">{{error_msg}}</div>{{/if}} {{#if error}}
        <div class="alert alert-danger">{{error}}</div>{{/if}}
    </div>
    <div class="fondo-blanco">
        <div class="card text-center">
            <div class="card-header">
                <ul class="nav nav-tabs card-header-tabs">
                    <li class="nav-item">
                        <a id="link-indiv" class="nav-link active" href="javascript:tarjeta_individual()">Individual</a>
                    </li>
                    <li class="nav-item">
                        <a id="link-grup" class="nav-link" href="javascript:tarjeta_grupal()">En masa</a>
                    </li>
                </ul>
            </div>
            <div>
                <div class="alert alert-danger" id="control_error" style="display:none"></div>
            </div>
            <div class="card-body">
                <div id="individual">
                    <h4 class="card-title">Edición individual</h4>
                    <div id="consulta_edicion" class="margen-row">
                        <div class="input-group" style="margin-bottom:12px">
                            <span class="input-group-addon" id="basic-addon1">Tarjeta número: </span>
                            <input type="number" min="0" onkeypress="return solonumeros(event)" value="0" name="" id="numero_consulta" class="form-control">
                        </div>
                        <button class="btn btn-dark" onclick="consultar_trj()">Consultar</button>
                        <button class="btn btn-danger" onclick="eliminar_trj()">Eliminar</button>
                    </div>
                    <div id="edicion_individual" style="display:none" class="margen-row">
                        <div class="alert alert-danger" id="error_trj" style="display:none"></div>
                        <div class="row">
                            <div class="col-lg-3 col-md-3 col-sm-6">
                                <div class="form-group">
                                    <label for="">Tarjeta número:</label>
                                    <input type="text" readonly name="numero" id="mod_tar_num" class="form-control">
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-3 col-sm-6">
                                <div class="form-group">
                                    <label for="">Fecha inicial</label>
                                    <input type="date" placeholder="AAAA-MM-DD" name="inicial" id="mod_tar_inic" class="form-control">
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-3 col-sm-6">
                                <div class="form-group">
                                    <label for="">Fecha de caducidad</label>
                                    <input type="date" placeholder="AAAA-MM-DD" name="final" id="mod_tar_fin" class="form-control">
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-3 col-sm-6">
                                <div class="form-group">
                                    <label for=""></label>
                                    <button class="btn btn-dark" onclick="actualiza_trj_indivdidual()">Actualizar</button>
                                    <button class="btn btn-info" onclick="tarjeta_individual()">Cancelar</button>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="">Estado</label>
                            <div id="loc_mod_tar"></div>
                        </div>
                    </div>
                </div>
                <div id="grupal" style="display:none" class="margen-row">
                    <h4 class="card-title">Edición en masa</h4>
                    <div class="table">
                        <table class="table">
                            {{#if tarjetas}} {{#each tarjetas}}
                            <tr>
                                <td>De la tarjeta número: {{this.inicial}} a la tarjeta número: {{this.final}}</td>
                                <td>
                                    <button onclick="modificar_grupo_trj('{{this.identificador}}')" type="button" class="btn btn-dark" aria-label="Left Align">
                                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                                    </button>
                                </td>
                                <td>
                                    <button onclick="eliminar_grupo_trj('{{this.identificador}}')" type="button" class="btn btn-danger" aria-label="Left Align">
                                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                                    </button>
                                </td>
                            </tr>
                            {{/each}} {{/if}}
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
