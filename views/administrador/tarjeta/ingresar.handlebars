<div class="row">
    <div class="col-lg-1 col-md-1"></div>
    <div class="col-lg-10 col-md-10">
        <div class="contenedor-bordes blanco">
            <div id="central-mensajes">
                {{#if success_msg}}
                <div class="centrado blanco mensaje-bien-sistema animated flash">
                    <h3>{{success_msg}}</h3>
                </div>
                {{/if}} {{#if error}}
                <div class="centrado blanco mensaje-error-sistema animated flash">
                    <h3>{{error}}</h3>
                </div>
                {{/if}}
                <div class="centrado blanco mensaje-bien-sistema" id="div-correcto" style="display:none; font-size:140%">

                </div>
                <div class="centrado blanco mensaje-error-sistema" id="div-error" style="display:none;font-size:140%"></div>
            </div>
            <h3 class="centrado ">Registrar tarjetas</h3>
            <form action="/admin-tarjetas/ing-tarjeta" method="post" onsubmit="validaciones(event)" enctype="multipart/form-data">
                <div class="margen-row calibri">

                    <div id="div-peligro" style="display:none" class="alert alert-danger"></div>
                    <div >
                        <div class="row">
                            <div class="col-lg-5 col-md-4">
                                <h3 class="centrado">Datos</h3>
                                <div class="form-group">
                                    <label for="">Título</label>
                                    <input type="text" name="titulo" placeholder="Título de la tarjeta" class="form-control" required>
                                </div>
                                <div class="form-group">
                                    <label for="">Descripción</label>
                                    <textarea name="descripcion" class="form-control" placeholder="Descripción de la tarjeta" id="" cols="30" rows="4"></textarea>
                                </div>
                                <div class="row">
                                    <div class="col-lg-6 col-md-6">
                                        <div class="form-group">
                                            <label for="">De la tarjeta número:</label>
                                            <div class="input-group">
                                                
                                                <input type="number" name="inicial" min="1" value="1" id="tarjeta-inicial" class="form-control" required>
                                            </div>

                                        </div>
                                        <div class="form-group">
                                            <label for="">Fecha Inicial</label>
                                            <input type="date" id="fecha-inicial" placeholder="MM/DD/AAAA" class="form-control" name="fini" required>
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6">
                                        <div class="form-group">
                                            <label for="">A la tarjeta número:</label>
                                            <div class="input-group">
                                                
                                                <input type="number" min="0" name="final" value="0" id="tarjeta-final" class="form-control" required>
                                            </div>

                                        </div>
                                        <div class="form-group">
                                            <label for="">Fecha de caducidad</label>
                                            <input type="date" id="fecha-final" placeholder="MM/DD/AAAA" class="form-control" name="ffin" required>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="input-group">
                                        <span class="input-group-addon" id="basic-addon1">
                                            <i class="zmdi zmdi-facebook"></i>
                                        </span>
                                        <input type="url" title="Ingrese http://" name="linkface" class="form-control" placeholder="Link de facebook" aria-describedby="basic-addon1">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="input-group">
                                        <span class="input-group-addon" id="basic-addon1">
                                            <i class="zmdi zmdi-instagram"></i>
                                        </span>
                                        <input type="url" title="Ingrese http://" name="linkInst" class="form-control" placeholder="Link de instagram" aria-describedby="basic-addon1">
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-4">
                                <h4 class="centrado">Imágen</h4>
                                <div class="form-group">
                                    <div id="poder" style="border:solid 1px white">
                                        <img src="../modular/imagenes/local.png" class="img-responsive " id="img_destino">
                                    </div>
                                    <br>
                                    <div class=" btn btn-primary" style="width:100%">
                                        Escoger 800 x 500
                                        <input type="file" class="btn_enviar" id="file_url" accept=".jpg,.png," name="image_producto" onchange="alertaOferta(this,this.files[0].size)"
                                            required/>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-4">
                                <h4 class="centrado">Locales</h4>
                                <p class="centrado">CTRL para seleccionar mas</p>
                                <select name="locales" size="10" id="" required multiple class="form-control">
                                    {{#if locales}} {{#each locales}}
                                    <option value="{{this.codigo}}">{{this.nombre}}</option>
                                    {{/each}} {{/if}}

                                </select>
                                <br>
                                <div class="form-group ">
                                    <button type="submit" class="btn btn-warning form-control">Guardar</button>
                                </div>
                            </div>
                        </div>
                        <br>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<script src="../modular/codigo/admin.js"></script>