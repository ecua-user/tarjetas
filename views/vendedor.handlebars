<div class="comprado">
    <ul class="nav nav-tabs ">
        <li class="nav-item">
            <a class="nav-link active" href="/vendedor/vender">Vender tarjetas</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/users/password">Cambiar contraseña</a>
        </li>
    </ul>
</div>
<br>
<div class=" comprado">
    <h2 class="centrado">Venta de tarjetas</h2>
    <br>
    <div class="row">
        <div class="col-lg-1 col-md-1"></div>
        <div class="col-lg-3 col-md-5">
            <h3 class="centrado">Vender</h3>
            <div id="centralMensajes">
                <div class="alert alert-success" id="div-correcto" style="display:none"></div>
                <div class="alert alert-danger" id="div-error" style="display:none"></div>
            </div>
            <form class="form-signin" action="" method="post" onsubmit="venderTarjeta(event)">
                <div class="form-group">
                    <label for="">Código</label>
                    <select required class="form-control" name="num_tarj" id="numero_tarjeta">
                        {{#if tarjetas}}
                            {{#each tarjetas}}
                                <option value="{{this.numero}}">Tarjeta N° {{this.numero}}</option>
                            {{/each}}
                        {{/if}}
                    </select>
                </div>
                <div class="form-group">
                    <label for="">Email</label>
                    <input type="email" required list="correos" id="correo_tarjetas" class="form-control">                   
                    <datalist id="correos">
                        {{#if clientes}}
                            {{#each clientes}}
                                <option value="{{this.username}}">{{this.username}}</option>
                            {{/each}}
                        {{/if}}
                    </datalist>
                </div>
                <button type="submit" class="btn btn-primary">Vender</button>
            </form>
        </div>
        <div class="col-lg-1 col-md-1"></div>
        <div class="col-lg-7 col-md-5" style="margin-bottom:20px">
            <h3 class="centrado">Vendidos</h3>
            {{#if vendidos}}
                {{#each vendidos}}
                    <div class="alert alert-success" role="alert">
                        Tarjeta: {{this.numero}}, Fecha: {{this.fechaventa}}
                    </div>
                {{/each}}
            
            {{else}}
                <div class="alert alert-danger" role="alert">
                    No hay ventas realizadas
                </div>
            {{/if}}
        </div>
    </div>
</div>
<script src="../especifico/scripts/index.js"></script>