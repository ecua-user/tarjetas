<div class="alert alert-primary margen-row" role="alert">
    <h3 class="centrado ">Asignar tarjetas a vendedor</h3>
</div>
<div class="row alert">
    <div class="col-lg-3 col-sm-2 col-md-3"></div>
    <div class="col-lg-6 col-sm-8 col-md-6">
         <div id="centralMensajes">
            <div class="alert alert-success" id="div-correcto" style="display:none"></div>
            <div class="alert alert-danger" id="div-error" style="display:none"></div>
        </div>
        <form id="form_asignacion" action="/admin/asignar-vendedor" method="post" onsubmit="comprobar_validez(event)">
            <div class="form-group row">
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <label for="">Fecha y hora</label>
                    <input type="datetime-local" name="fecha" id="fechayhora" autocomplete="" class="form-control" readonly>
                    <div class="form-group"><br>
                        <label for="">Desde la tarjeta número:</label>
                        <input type="number" id="tarj_ini" class="form-control" name="tarjeta_ini" min="1" step="1" value="1">
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <label for="">Vendedor</label>
                    <select name="vendedor" id="todos_vendedores" class="form-control" id="">
                        {{#if vendedor}}
                            {{#each vendedor}}
                                <option value="{{this.codigo}}">{{this.nombre}}</option>
                            {{/each}}
                        {{/if}}
                    </select>
                    <div class="form-group"><br>
                        <label for="">Hasta la tarjeta número:</label>
                        <input type="number" id="tarje_fin" class="form-control" name="tarjeta_fin" min="1" step="1" value="1">
                    </div>
                </div>          
            </div>
            
            <button type="submit" class="btn btn-info">Hacer entrega</button>
        </form>
    </div>
    <div class="col-lg-3 col-sm-2 col-md-3"></div>
</div>

<link rel="stylesheet" href="../especifico/estilos/admin.css">
<script>
    window.addEventListener('load',()=>{
        fecha=new Date();
        dia=fecha.getDate();
        if(dia<10)
            dia='0'+dia
        mes=fecha.getMonth()+1
        if(mes<10)
            mes='0'+mes
        hora=fecha.getHours()
        if(hora<10)
            hora='0'+hora
        minuto=fecha.getMinutes()
        if(minuto<10)
            minuto='0'+minuto
        asignar('fechayhora',fecha.getFullYear()+'-'+mes+'-'+dia+'T'+hora+':'+minuto)
    })
</script>
