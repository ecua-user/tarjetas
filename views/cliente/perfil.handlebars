<div class="row">
    <div class="col-lg-1 col-md-1 col-sm-1"></div>
    <div class="col-lg-10 col-md-10 col-sm-10">
        <div class="centrado contenedor-bordes">
            <div class="row">
                <div class="col-lg-2 col-md-2 bordes-blanco" style="background-color:rgba(000,000,000,1)" > 
                    <i class="zmdi zmdi-info zmdi-hc-2x" id="estado_local" style="display:none; position:absolute"></i>                  
                    <img  src="../general/imagenes/brand.png" id="img_trj" width="100%" alt="">
                    <label for="" class="blanco">Seleccionar tarjeta</label>
                    
                    <select required name="tarjeta" onchange="actualizar_img(this.value);" id="elecc_trj"  style="width:100%"
                        aria-placeholder="Tipo de tarjeta">
                        <option value="NA" onclick="presentar_locales(this.innerHTML)">Seleccionar</option>
                        {{#if tarjetas}} {{#each tarjetas}}
                        <option onclick="presentar_locales(this.innerHTML)" value="http://res.cloudinary.com/tarjetas/image/upload/v1512860497/tarjetas/{{this.imagen}}" >{{this.numero}}</option>
                        {{/each}} {{/if}}
                    </select>
                    <p class="blanco">Esta tarjete vence en: <b id="vencimiento"></b></p>
                </div>
                <div class="col-lg-10 col-md-10" style="padding-top:12px">
                    {{#if imagenes}}
                    <div id="corousel-ben" class="carousel slide " data-ride="carousel">
                        <div class="carousel-inner">
                            {{#each imagenes}}
                            <div class="carousel-item carro_img" style="padding-left:2%; padding-right:2%">
                                <img class="img-slider d-block w-100" src="{{this.imagen}}" alt="{{this.codigo}}">
                            </div>
                            {{/each}}
                        </div>
                        <a class="carousel-control-prev" style="background-color:rgba(000, 000, 000, 0.01)" href="#corousel-ben" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" style="background-color:rgba(000, 000, 000, 0.01)" href="#corousel-ben" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                    {{/if}}
                </div>
            </div>
        </div>
        <div id="nada" >
            <h1 class="centrado blanco">No hay nada que mostrar</h1>
            <h3 class="centrado blanco">Seleccione una tarjeta que usted haya adquirido</h3>
        </div>
        
        <div class="row" id="todos_locales" style="margin-top:12px;margin-left:5%;margin-right:5%;min-height:300px">
            
        </div>
    </div>
</div>

