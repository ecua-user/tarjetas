<link rel="stylesheet" href="../modular/estilos/home.css">
<div>
    <div style="display:none">
        <p id="fecha_inic">{{inicial}}</p>
        <p id="fecha_fin">{{final}}</p>
    </div>
    <div style="background-color:rgba(000,000,000,0.7); padding:4px">
        <h3 class="centrado titulo" name="detalles-importantes">{{#if tarjeta}}{{tarjeta.titulo}}{{/if}}</h3>
        <div class="centrado">
            <h6 class="centrado blanco">Válido desde el
                <b id="vald"></b>, hasta el
                <b id="valh"></b>
            </h6>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-5 col-md-5 col-sm-4 col-xs-4"></div>
        <div class="col-lg-2 col-md-2  col-sm-4 hidden-xs">
            <img src="{{tarjeta}}" alt="" class="img-responsive" width="100%">
        </div>
    </div>

    <div class="row" style="margin-top:20px;margin-bottom:40px; padding-left:20px;padding-right:20px">
        {{#if locales}} {{#each locales}}
        <div class="col-lg-3 col-md-4 col-sm-6" style="margin-bottom:12px;">
            <div class=" borde-redondo" style="border:solid 1px;border-color:white; padding:5px; background-color:rgba(000,000,000,0.7">
                <a href="javascript:detallar('{{this.codigo}}')">
                    <img style="min-height:200px" src="{{this.logotipo}}" class="borde-redondo" width="100%" alt="{{this.nombre}}">
                </a>
                <div class="caption">
                    <h4 class="centrado blanco" id="nom{{this.codigo}}">{{this.nombre}}</h4>
                    <div class="centrado">
                        <button type="button" title="Sitio web" class="btn btn-outline-warning" aria-label="Left Align">
                            <span>
                                <a href="{{this.web}}">
                                    <i class="zmdi zmdi-globe blanco"></i>
                                </a>
                            </span>
                        </button>
                        <a href="mailto:{{this.username}}">
                            <button type="button" title="Email" class="btn btn-outline-light" aria-label="Left Align">
                                <span>

                                    <i class="zmdi zmdi-email "></i>

                                </span>
                            </button>
                        </a>
                        <button type="button" title="facebook" class="btn btn-outline-primary" aria-label="Left Align">
                            <span>
                                <a href="{{this.facebook}}">
                                    <i class="zmdi zmdi-facebook-box blanco"></i>
                                </a>
                            </span>
                        </button>
                        <button type="button" class="btn btn-outline-danger" title="Instagram">
                            <span>
                                <a href="{{this.instagram}}">
                                    <i class="zmdi zmdi-instagram blanco"></i>
                                </a>
                            </span>
                        </button>
                        <a href="tel://{{this.telefono}}" title="Teléfono: {{this.telefono}}">
                            <button type="button" class="btn btn-outline-success">
                                <span>
                                    <i class="zmdi zmdi-phone-in-talk blanco"></i>
                                </span>
                            </button>
                        </a>
                    </div>
                    <div class="centrado blanco" style="margin-top:4px; ">
                        <h5>Horario de atención</h5>
                        <p>De {{this.apertura}} a {{this.cierre}}</p>
                    </div>

                    <a class="borde-redondo">
                        <button class="btn btn-dark" onclick="detallar('{{this.codigo}}')" style="width:100%; font-size:126%">
                            Mas información
                        </button>
                    </a>
                </div>
            </div>
        </div>

        {{/each}} {{/if}}
    </div>
</div>
<script>
    window.addEventListener('load', () => {
        document.getElementById('local-desc').style.display = 'none'
        document.getElementById('tarjeta-img').style.display = 'block'
    })
</script>
<script src="../modular/codigo/home.js"></script>

<div class="modal fade bd-example-modal-lg" id="local-info" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content  bordes-blanco " style="background-color:rgba(000,000,000,0.9);">
            <div class="modal-header">
                <h5 class="modal-title blanco" id="nom_loc"></h5>
                <button type="button" class="close " data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true" class="blanco">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row" style="margin-bottom:12px;padding-left:10%">
                    <div class="col-lg-4 col-md-4 col-sm-4 hidden-xs" style="border-right:1px solid white; padding-left:4px">
                        <img src="" width="100%" alt="" id="img_local">
                    </div>
                    <div class="col-lg-8 col-md-8 col-sm-8 blanco">
                        <h3 for="">Horario:
                            <b id="horario_loc"></b>
                        </h3>
                        <h3 for="">Dirección:
                            <b id="dir_loc"></b>
                        </h3>
                        <div class="row">
                            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-2">
                                <span>
                                    <a id="inst_local">
                                        <i class="zmdi zmdi-instagram blanco zmdi-hc-2x"></i>
                                    </a>
                                </span>
                                <span>
                                    <a id="face_local">
                                        <i class="zmdi zmdi-facebook-box blanco zmdi-hc-2x"></i>
                                    </a>
                                </span>

                            </div>
                            <div class="col-lg-8 col-md-8 col-sm-8 col-xs-10">
                                <button class="btn btn-primary btn-block" onclick="javascript:$('#local-info').modal('hide');$('#mapa-info').modal()">
                                    <h5>Abrir ubicación</h5>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="carrusel_beneficios" class="carousel slide" style="background-color:white">
                    <div class="carousel-inner" id="elementos-carrusel">

                    </div>
                    <a class="carousel-control-prev" href="#carrusel_beneficios" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" style="background-color:black" aria-hidden="true"></span>
                        <span class="sr-only" style="background-color:black">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carrusel_beneficios" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" style="background-color:black" aria-hidden="true"></span>
                        <span class="sr-only" style="background-color:black">Next</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    window.addEventListener('load', () => {
        innerTexto('vald', ordenarFechas(obtenerTexto('fecha_inic')))
        innerTexto('valh', ordenarFechas(obtenerTexto('fecha_fin')))
    })
</script>


<div class="modal fade bd-example-modal-lg" id="mapa-info" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content  bordes-blanco " style="background-color:rgba(000,000,000,0.9);">
            <div class="modal-header">
                <h5 class="modal-title blanco">Ubicación geográfica</h5>
                <button type="button" class="close " data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true" class="blanco">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <iframe src="" width="100%" height="500px" frameborder="0" id="mapa_loc" style="border:0" allowfullscreen>

                </iframe>
            </div>
        </div>
    </div>
</div>