<script>
        function getAndroidVersion(ua) {
            ua = (ua || navigator.userAgent).toLowerCase(); 
            var match = ua.match(/android\s([0-9\.]*)/);
            return match ? match[1] : false;
        };
        $(function () {
            var nua = navigator.userAgent
            var isAndroid = (nua.indexOf('Mozilla/5.0') > -1 && nua.indexOf('Android ') > -1 && nua.indexOf('AppleWebKit') > -1 && nua.indexOf('Chrome') === -1)
            if (isAndroid){
                $('select.form-control').removeClass('form-control').css('width', '100%')
            }   
            if(getAndroidVersion()){
                if(getAndroidVersion()[0]<5){                   
                    swal('Atención', 'El SO del dispositivo es muy antiguo, es posible que no se muestre correctamente en el navegador por defecto, use la última versión de preferencia Mozilla firefox o Google Chrome', 'info')
                }
            }
        })
    </script>