<link rel="stylesheet" href="../modular/estilos/home.css">
<script src="../modular/codigo/home.js"></script>

<!--Slider-->
{{#if slider}}
<div class="slider-principal slider">
  <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      {{#each slider}}
      <div class="carousel-item">
        <img class="img-slider d-block w-100" src="{{this.imagen}}" alt="ImÃ¡gen 1">
        <div class="carousel-caption d-none d-md-block">
          <h3>{{this.titulo}}</h3>
          <p>{{this.informacion}}</p>
        </div>
      </div>
      {{/each}}
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>
{{/if}}
<!--Videos-->
{{#if video}}
<div class="slider-principal">
  <iframe width="100%" id="espacio_video" class="video-youtube" src="{{video.url}}"
    frameborder="0" allowfullscreen></iframe>
</div>

{{/if}}
<div class="centrado">
  {{#if videos}} {{#each videos}}
  <button style="margin-bottom:2px" class="btn btn-primary" onclick="cargar_video('{{this.url}}')">{{this.titulo}}</button>
  {{/each}} {{/if}}
</div>

<h1 class="centrado titulo" style="margin-top:4px;margin-bottom:22px">Escoge tu sector</h1>
<!--Todas las tarjetas-->
<div style="margin:0 auto;padding-left:18px;padding-right:18px" class="centrado">
  <div class="row" style="margin-bottom:20px">
    {{#if tarjetas}} {{#each tarjetas}}
    <div class="col-lg-4 col-md-6 zoomIt" style="margin-bottom:12px">
      <h3 class="centrado blanco borde-redondo" style="background-color:rgba(45, 41, 54, 1); padding:4px;padding-top:2px;">
          <strong style="margin-left:6px;  margin-right:6px">{{this.titulo}}</strong>
          <a href="{{this.linkface}}"><i class="zmdi zmdi-facebook-box blanco"></i></a>
          <a href="{{this.linkInst}}"><i class="zmdi zmdi-instagram blanco"></i></a>
      </h3>
      <a href="/tarjetas:{{this.codigo}}" class="thumbnail  ">   
        <img width="100%" class="borde-redondo" src="{{this.imagen}}" alt="{{this.titulo}}">
      </a>
    </div>
    {{/each}} {{/if}}
  </div>
</div>
<script>
  window.addEventListener('load', () => {
    imagenes_slider = document.getElementsByClassName('carousel-item')
    imagenes_slider[0].className += 'active'
  })
</script>