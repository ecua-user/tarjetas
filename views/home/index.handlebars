    <div class="col-lg-6 col-md-6" style="">
        <div id="central-mensajes" style="height:60px">
            {{#if success_msg}}
            <div class="centrado blanco mensaje-bien-sistema animated flash">
                <h3>{{success_msg}}</h3>
            </div>
            {{/if}} {{#if error}}
            <div class="centrado blanco mensaje-error-sistema animated flash">
                <h3>{{error}}</h3>
            </div>
            {{/if}}
            <div class="centrado blanco mensaje-bien-sistema" id="div-correcto" style="display:none; font-size:140%">

            </div>
            <div class="centrado blanco mensaje-error-sistema" id="div-error" style="display:none;font-size:140%"></div>
        </div>
        {{#if user}}
        <div class="contenedor-bordesI blanco" style="height:500px">
            <h1 class="blanco centrado">VIDEOS INFORMATIVOS</h1>
            {{#if video}}
            <div id="corousel-vid" class="carousel slide " data-ride="">
                <div class="carousel-inner">
                    {{#each video}}
                    <div class="carousel-item carro_vid" style="padding-left:4%; padding-right:4%">
                        <iframe width="100%" id="espacio_video" height="315" src="{{this.url}}" frameborder="0" gesture="media" allow="encrypted-media"
                            allowfullscreen></iframe>
                    </div>
                    {{/each}}
                </div>
                <a class="carousel-control-prev" style="background-color:rgba(000, 000, 000, 0.01)" href="#corousel-vid" role="button" data-slide="prev">
                    <span class="glyphicon glyphicon-triangle-left" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" style="background-color:rgba(000, 000, 000, 0.01)" href="#corousel-vid" role="button" data-slide="next">
                    <span class="glyphicon glyphicon-triangle-right" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
            {{/if}}
        </div>

        {{else}}
        <div class="blanco" id="" style="background-color:rgba(000, 000, 000, 0.5);padding:24px">
            <h1 class="centrado blanco calibri">REGISTRARTE</h1>
            <form class=" cordia" action="/users/registro" method="post" onsubmit="registro(event)">
                <div class="row">
                    <div class="col-lg-6 col-md-6">
                        <div class="form-group">
                            <input type="text" title="No se incluyen números" pattern="^[a-zA-ZñÑ\s\W]*" id="txtnombre" autofocus placeholder="Nombre (completo)"
                                class="form-control form-control-size" required>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon" id="basic-addon1">Edad</span>
                                <input type="number" step="1" value="18" min="18" max="150" id="txtedad" placeholder="Edad" class="form-control form-control-size"
                                    required>
                            </div>
                        </div>

                        <div class="form-group">
                            <input type="text" id="txtsector" placeholder="Sector" class="form-control form-control-size" required>
                        </div>
                        <div class="form-group">
                            <input type="email" id="txtcorreo" placeholder="Correo" class="form-control form-control-size" required>
                        </div>
                        <div class="form-group">
                            <input type="password" title="La contraseña debe tener al entre 8 y 16 caracteres, al menos un dígito, al menos una minúscula, al menos una mayúscula y al menos un caracter no alfanumérico."
                                minlength="8" id="txtpassword" placeholder="Contraseña" class="form-control form-control-size"
                                required>
                        </div>
                        <div class="form-group">
                            <input title="La contraseña debe tener al entre 8 y 16 caracteres, al menos un dígito, al menos una minúscula, al menos una mayúscula y al menos un caracter no alfanumérico."
                                type="password" minlength="8" id="txtRpassword" placeholder="Repetir contraseña" class="form-control form-control-size"
                                required>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6">
                        <div class="form-group">
                            <input type="text" onload="vlidar()" onclick="validar()" onchange="validar()" onkeyup="validar()" id="txtcedula" placeholder="Cédula/pasaporte"
                                class="form-control form-control-size" required>
                        </div>
                        <div class="form-group">
                            <div class="input-group form-control">
                                <span class="input-group-addon " id="basic-addon1">Género</span>
                                <select name="selgenero" id="generoSelector" class="form-control ">
                                    <option value="M">Masculino</option>
                                    <option value="F">Femenino</option>
                                    <option value="N">Otro</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group form-control">
                                <span class="input-group-addon" id="basic-addon1">Referido</span>
                                <select name="referido" class="form-control" id="idreferido">
                                    <option value="Ninguno">Ninguno</option>
                                    {{#if referido}} {{#each referido}}
                                    <option value="{{this.nombre}}">{{this.nombre}}</option>
                                    {{/each}} {{/if}}
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="tel" pattern="^(09)[0-9]*" title="Ingreser un número de celular válido" id="txttelefono" minlength="10" maxlength="10"
                                placeholder="Teléfono" class="form-control form-control-size" required>
                        </div>
                        <div class="form-group">
                            <input type="text" id="txtdireccion" placeholder="Dirección" class="form-control form-control-size" required>
                        </div>
                        <button type="submit" class="btn btn-warning nwarning btn-block">
                            <b>REGISTRAR</b>
                        </button>
                    </div>
                </div>
            </form>
        </div>
        {{/if}}
    </div>
</div>
