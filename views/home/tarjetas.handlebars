<div class="row" id="espaciado_locales">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="centrado " style="background-color:#131313;">
            {{#if imagenes}}
            <div id="corousel-ben" class="carousel slide " data-ride="carousel">
                <div class="carousel-inner" style="padding-left:25%; padding-right:25%">
                    {{#each imagenes}}
                    <div class="carousel-item carro_img" style="padding-left:2%; padding-right:2%">
                        <img class="slid_respons img-slider d-block w-100" src="{{this.imagen}}" alt="{{this.codigo}}">
                    </div>
                    {{/each}}
                </div>
                <a class="carousel-control-prev" style="background-color:rgba(000, 000, 000, 0.01)" href="#corousel-ben" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" style="background-color:rgba(000, 000, 000, 0.01)" href="#corousel-ben" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
            {{/if}}
        </div>
        <div class="row" id="todos_locales" style="margin-top:12px;max-height:470px;overflow-y: scroll;margin-bottom:30px">
            {{#if locales}}
            {{#each locales}}
            <div style="padding:4px; width:25%; float:left;">
                <div style="background:#000000">
                    <img class="img_locales" onclick="detallarLoc_free('{{this.codigo}}')" width="100%" src="{{this.logotipo}}" alt="{{this.codigo}}"/>
                </div>
            </div> 
        
            {{/each}}
            {{/if}}
        </div>
    </div>
</div>

<script>
    window.addEventListener('load', () => {
        control_slider_beneficios()
        document.getElementById('contendedor-general').style.backgroundColor = 'rgba(255,255,255,0.6)'
    })
</script>
<script src="../modular/codigo/cliente.js"></script>

