<div class="alert alert-primary  margen-row" role="alert">
    <h3 class="centrado ">Registrar tarjetas</h3>
</div>
<form action="/admin/ing-tarjeta" method="post" onsubmit="validaciones(event)" enctype="multipart/form-data">
    <div class="row margen-row">
        <div class="col-lg-9 col-md-8 col-sm-7 col-xs-6">
            <h4 class="centrado">Datos</h4>
            <div id="div-peligro" style="display:none" class="alert alert-danger"></div>
            <div id="centralMensajes">
                
                {{#if success_msg}}
                <div class="alert alert-success">{{success_msg}}</div>{{/if}} {{#if error_msg}}
                <div class="alert alert-danger">{{error_msg}}</div>{{/if}} {{#if error}}
                <div class="alert alert-danger">{{error}}</div>{{/if}}
            </div>
            <div class="row">
                <div class="col-lg-6 col-md-6">
                    <div class="form-group">
                        <label for="">De la tarjeta número:</label>
                        <input type="number" name="inicial" min="0" value="0" id="tarjeta-inicial" class="form-control" required>
                    </div>
                   <div class="form-group">
                        <label for="">A la tarjeta número:</label>
                        <input type="number" min="0" name="final" value="0" id="tarjeta-final" class="form-control" required>
                    </div>
                </div> 
                <div class="col-lg-6 col-md-6">
                    
                     <div class="form-group">
                        <label for="">Fecha Inicial</label>
                        <input type="date" id="fecha-inicial" placeholder="MM/DD/AAAA" class="form-control" name="fini" required>
                    </div>
                    <div class="form-group">
                        <label for="">Fecha de caducidad</label>
                        <input type="date" id="fecha-final" placeholder="MM/DD/AAAA" class="form-control" name="ffin" required>
                    </div>
                    <div class="form-group hidden-xs">
                        <button type="submit" class="btn btn-primary form-control">Guardar</button>
                    </div>
                    
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-4 col-sm-5 col-xs-6">
            <h4 class="centrado">Imágen</h4>
            <div class="form-group">
                <div class="row">
                    <div class="col-lg-5 col-md-5 col-sm-6 col-xs-8">
                        <div id="poder form-signin ">
                            <img src="../especifico/imagenes/local.png" class="img-responsive " id="img_destino">
                        </div>
                    </div>
                    <div class="col-lg-7 col-md-7 col-sm-6 col-xs-4">
                        <div class=" btn btn-info">
                            <span class="glyphicon glyphicon-picture" aria-hidden="true"></span>
                            <input type="file" class="btn_enviar" id="file_url" accept=".jpg,.png," name="image_producto" onchange="alertaOferta(this,this.files[0].size)"
                                required/>
                        </div>
                    </div>
                </div>
            </div>
            <h4 class="centrado">Locales</h4>
            <p class="centrado">CTRL para seleccionar mas</p>
            <select name="locales" size="10" id="" required multiple class="form-control">
                {{#if locales}}
                    {{#each locales}}
                        <option value="{{this.codigo}}">{{this.nombre}}</option>
                    {{/each}}
                {{/if}}

            </select><br>
            <div class="form-group hidden-lg hidden-md hidden-sm">
                <button type="submit" class="btn btn-primary form-control">Guardar</button>
            </div>
            <br>
        </div>
    </div>
</form>
